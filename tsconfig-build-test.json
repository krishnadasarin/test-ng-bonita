{
    "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["es2015", "dom"],
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "typeRoots": [
        "node_modules/@types/"
      ]
    },
  
    "files": [
      "build/app/app.module.ts",
      "aot/build/main-aot-test.ts"
    ],
  
    "angularCompilerOptions": {
     "genDir": "aot",
     "skipMetadataEmit" : true,
     "debug": true
   }
  }  